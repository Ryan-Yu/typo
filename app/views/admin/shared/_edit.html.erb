<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article.id and @is_user_admin %>

	<!-- Cannot put this inside of _form.html.erb (would be nesting FORM tags) -->
	<h3>Merge Articles</h3>

	<%= form_tag :controller => "content", :action => 'merge', :id => @article.id do %>
		<!-- Needed for autograder  -->
		<%= label_tag "merge_with", "Article ID" %>
		<%= text_field_tag "merge_with" %>
		<%= submit_tag "Merge" %>
	<% end %>
<% end %>
